<div class="post-splash {{#unless feature_image}}post-splash--no-image{{/unless}}">
  <header class="post-splash__header">
    <h1 class="post-splash__header__title">{{title}}</h1>
    {{#if custom_excerpt}}<h2 class="post-splash__header__subtitle">{{custom_excerpt}}</h2>{{/if}}
  </header>

  {{#if feature_image}}
  <figure class="post-splash__image">
    {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
    <img srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 700px,
                            1400px" src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
  </figure>
  {{/if}}
</div>